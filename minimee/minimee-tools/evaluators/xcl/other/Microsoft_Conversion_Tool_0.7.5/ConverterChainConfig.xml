<?xml version="1.0" encoding="utf-8" ?>
<converter-chain-config>
  <types>

    <!--
    ###########################################################################################
    TYPES SECTION
    ###########################################################################################
    -->

    <!-- XCDL -->
    <type name="XCDL" nice-name="Extensible Characterisation Definition Language" fform-values="0" extensions=".xcdl"/>

    <!-- Word Formats -->
    <type name="DOSWORD" nice-name="Microsoft DOS Word 4-6" fform-values="16,17,18,19,20" extensions=".doc"/>
    <type name="WINWORD1" nice-name="Microsoft Word 1" fform-values="32" extensions=".doc"/>
    <type name="WINWORD11" nice-name="Microsoft Word 1.1" fform-values="33" extensions=".doc"/>
    <type name="WINWORD2" nice-name="Microsoft Word 2" fform-values="34" extensions=".doc"/>
    <type name="WINWORD6" nice-name="Microsoft Word 6" fform-values="35" extensions=".doc"/>
    <type name="WINWORD7" nice-name="Microsoft Word 95" fform-values="36" extensions=".doc"/>
    <type name="WORD97" nice-name="Microsoft Word 97-2003" fform-values="37,38,39,40" extensions=".doc" />
    <type name="DOCX" nice-name="Microsoft Word 2007" fform-values="41" extensions=".docx" />

    <!-- Excel Formats -->
    <type name="EXCEL7" nice-name="Microsoft Excel 7" fform-values="128" extensions=".xls"/>
    <type name="EXCEL97" nice-name="Microsoft Excel 97-2003" fform-values="129,130,131,132" extensions=".xls"/>
    <type name="XLSX" nice-name="Microsoft Excel 2007" fform-values="133" extensions=".xlsx"/>

    <!-- Powerpoint Formats -->
    <type name="PPT7" nice-name="Microsoft Powerpoint 7" fform-values="144" extensions=".ppt"/>
    <type name="PPT97" nice-name="Microsoft Powerpoint 97-2003" fform-values="145,146,147,148" extensions=".ppt" />
    <type name="PPTX" nice-name="Microsoft Powerpoint 2007" fform-values="149" extensions=".pptx" />

    <!-- Word Perfect Formats -->
    <type name="WP5" nice-name="Word Perfect 5" fform-values="49,50" extensions=".wp,.wpd" />
    <type name="WP6" nice-name="Word Perfect 6" fform-values="51,52" extensions=".wp,.wpd" />

    <!-- Picture Formats -->
    <type name="TIFF" nice-name="Tiff" fform-values="160" extensions=".tiff,.tif"/>
    <type name="GIF" nice-name="Gif" fform-values="161" extensions=".gif"/>
    <type name="JPG" nice-name="Jpeg" fform-values="162" extensions=".jpg,.jpeg"/>
    <type name="BITMAP" nice-name="Bitmap" fform-values="163" extensions=".bmp"/>

    <!-- Open Document Formats -->
    <type name="ODP" nice-name="Open Document Presentation" fform-values="176" extensions=".odp"/>
    <type name="ODT" nice-name="Open Document Text" fform-values="177" extensions=".odt"/>
    <type name="ODS" nice-name="Open Document Spreadsheet" fform-values="178" extensions=".ods"/>

    <!-- Other Text Formats -->
    <type name="RTF" nice-name="Rich Text Format" fform-values="112" extensions=".rtf"/>
    <type name="TEXTFILE" nice-name="Text" fform-values="114" extensions=".txt"/>
    <type name="POSTSCRIPT" nice-name="Postscript" fform-values="115" extensions=".ps"/>
    <type name="PDF" nice-name="PDF" fform-values="116" extensions=".pdf"/>

    <!-- Other Stuff -->
    <type name="QONE" nice-name="QONE" fform-values="64" extensions=".gne"/>
    <type name="PIVOT" nice-name="Pivot" fform-values="80" extensions=".pvt"/>
    <type name="SGML" nice-name="SGML" fform-values="96" extensions=".sgml"/>
    <type name="SGMLPACKED" nice-name="SGML packed" fform-values="97" extensions=".sgml"/>
    <type name="HTML" nice-name="HTML" fform-values="98" extensions=".html,.htm,.xhtml"/>
    <type name="MIME" nice-name="MIME" fform-values="99" extensions=".mime"/>

  </types>
  <converters>

    <!--
    ###########################################################################################
    CONVERTER SECTION
    ###########################################################################################
    -->

    <!--
    OLE Storage to Open XML 
    -->
    <converter name="convDoc2Docx"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.Doc2OpenXml.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.Doc2OpenXml.Doc2OpenXml" />

    <converter name="convPpt2Pptx"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.Doc2OpenXml.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.Doc2OpenXml.Ppt2OpenXml" />

    <converter name="convXls2XlsX"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.Doc2OpenXml.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.Doc2OpenXml.Xls2OpenXml" />

    <!-- Doc to XCDL -->
    <converter name="convDoc2Xcdl"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.Doc2Xcdl.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.Doc2Xcdl.Doc2Xcdl" />

    <!--
    Supports ODF as input and output
    -->
    <converter name="convOpenDocumentFormat"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.Odf2OpenXml.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.Odf2OpenXml.Odf2OpenXml" />

    <!-- 
    Rtf to Foreign 
    -->
    <converter name="convRtf2Wp5"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.Rtf2Foreign"
               args="WrdPrfctDos,false" />

    <converter name="convRtf2Wp6"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.Rtf2Foreign"
               args="WordPerfect6x,true" />

    <converter name="convRtf2Doc"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.Rtf2Foreign"
               args="Word97,false" />

    <converter name="convRtf2OpenXml"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.Rtf2Foreign"
               args="Word12,false" />

    <!-- Foreign to Rtf -->
    <converter name="convDOSWrd2Rtf"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.Foreign2Rtf"
               args="DOSWORD,false" />

    <converter name="convWp52Rtf"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.Foreign2Rtf"
               args="WrdPrfctDos,false" />

    <converter name="convWp62Rtf"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.Foreign2Rtf"
               args="WordPerfect6x,true" />

    <converter name="convWord2Rtf"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.Foreign2Rtf"
               args="Word97,false" />

    <converter name="convWord22Rtf"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.Foreign2Rtf"
               args="MSWordWin2,false" />

    <converter name="convWord62Rtf"
               assembly="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.dll"
               class="DIaLOGIKa.Planets.Preservation.Converters.WordCnvWrapper.Foreign2Rtf"
               args="MSWord6,true" />

  </converters>

  <!--
  ###########################################################################################
  CHAIN SECTION
  ###########################################################################################
  -->


  <!--
  Chains to Open XML
  -->
  <chain name="DOSWord-2-Docx" intypes="DOSWORD" outtypes="DOCX">
    <converter-ref index="1" ref="convDOSWrd2Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
  </chain>
  <chain name="Word2-2-Docx" intypes="WINWORD2" outtypes="DOCX">
    <converter-ref index="1" ref="convWord22Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
  </chain>
  <chain name="Word6-2-Docx" intypes="WINWORD6" outtypes="DOCX">
    <converter-ref index="1" ref="convWord62Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
  </chain>
  <chain name="Word95-2-Docx" intypes="WINWORD7" outtypes="DOCX">
    <converter-ref index="1" ref="convWord62Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
  </chain>
  <chain name="Word97-2-Docx" intypes="WORD97" outtypes="DOCX">
    <converter-ref index="1" ref="convDoc2Docx" />
  </chain>
  <chain name="Wp5-2-Docx" intypes="WP5" outtypes="DOCX">
    <converter-ref index="1" ref="convWp52Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
  </chain>
  <chain name="Wp6-2-Docx" intypes="WP6" outtypes="DOCX">
    <converter-ref index="1" ref="convWp62Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
  </chain>
  <chain name="Odt-2-Docx" intypes="ODT" outtypes="DOCX">
    <converter-ref index="1" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Rtf-2-Docx" intypes="RTF" outtypes="DOCX">
    <converter-ref index="1" ref="convRtf2OpenXml" />
  </chain>
  <chain name="Ods-2-Xlsx" intypes="ODS" outtypes="XLSX">
    <converter-ref index="1" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Odp-2-Pptx" intypes="ODP" outtypes="PPTX">
    <converter-ref index="1" ref="convOpenDocumentFormat" />
  </chain>

  <!--
  Chains to Open Document Format convDoc2Docx
  -->
  <chain name="Wp5-2-Odt" intypes="WP5" outtypes="ODT">
    <converter-ref index="1" ref="convWp52Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
    <converter-ref index="3" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Wp6-2-Odt" intypes="WP6" outtypes="ODT">
    <converter-ref index="1" ref="convWp62Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
    <converter-ref index="3" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="DOSWord-2-ODT" intypes="DOSWORD" outtypes="DOCX">
    <converter-ref index="1" ref="convDOSWrd2Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
  </chain>
  <chain name="DOSWord-2-Docx" intypes="DOSWORD" outtypes="ODT">
    <converter-ref index="1" ref="convDOSWrd2Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
    <converter-ref index="3" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Word2-2-Odt" intypes="WINWORD2" outtypes="ODT">
    <converter-ref index="1" ref="convWord2Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
    <converter-ref index="3" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Word6-2-Odt" intypes="WINWORD6" outtypes="ODT">
    <converter-ref index="1" ref="convWord62Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
    <converter-ref index="3" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Word95-2-Odt" intypes="WINWORD7" outtypes="ODT">
    <converter-ref index="1" ref="convWord62Rtf" />
    <converter-ref index="2" ref="convRtf2OpenXml" />
    <converter-ref index="3" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Docx-2-Odt" intypes="DOCX" outtypes="ODT">
    <converter-ref index="1" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Doc-2-Odt" intypes="WORD97" outtypes="ODT">
    <converter-ref index="1" ref="convDoc2Docx" />
    <converter-ref index="2" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Rtf-2-Odt" intypes="RTF" outtypes="ODT">
    <converter-ref index="1" ref="convRtf2OpenXml" />
    <converter-ref index="2" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Ppt-2-Odp" intypes="PPT97" outtypes="ODP">
    <converter-ref index="1" ref="convPpt2Pptx" />
    <converter-ref index="2" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Pptx-2-Odp" intypes="PPTX" outtypes="ODP">
    <converter-ref index="1" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Xls-2-Ods" intypes="PPT97" outtypes="ODS">
    <converter-ref index="1" ref="convXls2XlsX" />
    <converter-ref index="2" ref="convOpenDocumentFormat" />
  </chain>
  <chain name="Xlsx-2-Ods" intypes="XLSX" outtypes="ODS">
    <converter-ref index="1" ref="convOpenDocumentFormat" />
  </chain>
  <!--
  Chains to XCDL
  -->
  <chain name="Word97-2-Xcdl" intypes="WORD97" outtypes="XCDL">
    <converter-ref index="1" ref="convDoc2Xcdl"/>
  </chain>

</converter-chain-config>
