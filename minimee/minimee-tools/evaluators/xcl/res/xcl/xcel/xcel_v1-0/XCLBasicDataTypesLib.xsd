			<xs:enumeration value="bit">
				<xs:annotation>
					<xs:documentation>smallest information unit representing either 0 or 1</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="byte">
				<xs:annotation>
					<xs:documentation>sequence of eight bits</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
		</xs:restriction>
	</xs:simpleType>
